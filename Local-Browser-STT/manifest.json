{
  "manifest_version": 3,
  "name": "Audio Transcriber",
  "version": "1.0",
  "permissions": ["tabCapture", "activeTab", "offscreen", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
